<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background with food-themed colors -->
    <gradient
        android:startColor="#FF6B35"
        android:endColor="#F7931E"
        android:angle="135"
        android:type="linear" />

    <!-- Optional: Add some texture with strokes -->
    <stroke
        android:width="1dp"
        android:color="#E55A2B" />

    <!-- Optional: Add corner radius if you want rounded corners -->
    <corners android:radius="0dp" />

</shape>